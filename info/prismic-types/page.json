                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,heading2,strong,em,hyperlink,list-item,o-list-item",
                  "allowTargetBlank": true,
                  "label": "Text"
                }
              },
              "layout": {
                "type": "Select",
                "config": {
